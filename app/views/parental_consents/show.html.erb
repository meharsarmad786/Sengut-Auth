<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
          <h3 class="mb-0">
            <i class="bi bi-shield-check"></i> Parental Consent Approved
          </h3>
          <p class="mb-0 mt-2">Your consent is active and verified</p>
        </div>
        <div class="card-body p-4">
          <!-- Status Alert -->
          <div class="alert alert-success">
            <h6 class="alert-heading">
              <i class="bi bi-check-circle"></i> Consent Status: Active
            </h6>
            <p class="mb-0">
              Your parental consent has been submitted and approved. You can now participate in all 
              organization activities appropriate for your age group.
            </p>
          </div>

          <!-- Your Information -->
          <div class="card mb-4">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-person"></i> Minor Information
              </h6>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <p><strong>Name:</strong> <%= current_user.full_name %></p>
                  <p><strong>Email:</strong> <%= current_user.email %></p>
                  <p><strong>Age:</strong> <%= current_user.age %> years old</p>
                </div>
                <div class="col-md-6">
                  <p><strong>Age Group:</strong> <%= current_user.age_group&.name || 'N/A' %></p>
                  <p><strong>Organizations:</strong> <%= current_user.organizations.count %></p>
                  <p><strong>Activities:</strong> <%= current_user.participation_activities.count %></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Parent/Guardian Information -->
          <div class="card mb-4">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-person-check"></i> Parent/Guardian Information
              </h6>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <p><strong>Name:</strong> <%= @parental_consent.parent_name %></p>
                  <p><strong>Email:</strong> <%= @parental_consent.parent_email %></p>
                </div>
                <div class="col-md-6">
                  <p><strong>Consent Given:</strong> <%= @parental_consent.consent_given_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                  <p><strong>Status:</strong> 
                    <span class="badge bg-success">
                      <i class="bi bi-check-circle"></i> Approved
                    </span>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Permissions Granted -->
          <div class="card mb-4">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-shield-check"></i> Permissions Granted
              </h6>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <h6 class="text-success">You can now:</h6>
                  <ul class="list-unstyled">
                    <li><i class="bi bi-check text-success"></i> Join organizations</li>
                    <li><i class="bi bi-check text-success"></i> Participate in activities</li>
                    <li><i class="bi bi-check text-success"></i> Interact with other members</li>
                    <li><i class="bi bi-check text-success"></i> Access age-appropriate content</li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <h6 class="text-info">Age-appropriate restrictions:</h6>
                  <ul class="list-unstyled">
                    <li><i class="bi bi-shield text-info"></i> Content filtering active</li>
                    <li><i class="bi bi-shield text-info"></i> Activity monitoring enabled</li>
                    <li><i class="bi bi-shield text-info"></i> Privacy protection enforced</li>
                    <li><i class="bi bi-shield text-info"></i> Safe interaction environment</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="d-grid gap-2 d-md-flex justify-content-md-between">
            <div>
              <%= link_to dashboard_path, class: "btn btn-primary" do %>
                <i class="bi bi-speedometer2"></i> Go to Dashboard
              <% end %>
              <%= link_to organizations_path, class: "btn btn-outline-primary ms-2" do %>
                <i class="bi bi-building"></i> Browse Organizations
              <% end %>
            </div>
            <div>
              <%= link_to edit_parental_consent_path(@parental_consent), class: "btn btn-outline-warning" do %>
                <i class="bi bi-pencil"></i> Update Information
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Important Information -->
      <div class="card mt-4">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="bi bi-info-circle"></i> Important Information
          </h6>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6 class="text-primary">Safety Features:</h6>
              <ul class="list-unstyled">
                <li><i class="bi bi-shield-check text-success"></i> Age verification active</li>
                <li><i class="bi bi-shield-check text-success"></i> Content moderation enabled</li>
                <li><i class="bi bi-shield-check text-success"></i> Activity logging for safety</li>
              </ul>
            </div>
            <div class="col-md-6">
              <h6 class="text-primary">Parent/Guardian Rights:</h6>
              <ul class="list-unstyled">
                <li><i class="bi bi-eye text-info"></i> View activity reports</li>
                <li><i class="bi bi-pencil text-info"></i> Update consent information</li>
                <li><i class="bi bi-x-circle text-info"></i> Revoke consent at any time</li>
              </ul>
            </div>
          </div>
          
          <div class="mt-3 p-3 bg-light rounded">
            <p class="mb-1">
              <strong>Questions or concerns?</strong> 
              Your parent/guardian can contact us at any time to discuss your participation or modify consent settings.
            </p>
            <p class="mb-0">
              <small class="text-muted">
                <i class="bi bi-clock"></i> This consent remains valid until you turn 18 or until revoked by your parent/guardian.
              </small>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 
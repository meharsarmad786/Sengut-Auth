<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <!-- Organization Header -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h1 class="display-6 mb-2">
                <i class="bi bi-building"></i> <%= @organization.name %>
              </h1>
              <p class="lead text-muted mb-3"><%= @organization.description %></p>
              <div class="mb-3">
                <span class="badge bg-success me-2">
                  <i class="bi bi-check-circle"></i> Active
                </span>
                <span class="badge bg-info me-2">
                  <i class="bi bi-person-badge"></i> Your Role: <%= @user_role.capitalize %>
                </span>
                <span class="badge bg-primary">
                  <i class="bi bi-people"></i> <%= @organization.members_count %> Members
                </span>
              </div>
            </div>
            
            <div class="text-end">
              <% if current_user.admin_of?(@organization) %>
                <%= link_to edit_organization_path(@organization), class: "btn btn-outline-primary me-2" do %>
                  <i class="bi bi-pencil"></i> Edit
                <% end %>
                <%= link_to analytics_organization_path(@organization), class: "btn btn-info me-2" do %>
                  <i class="bi bi-graph-up"></i> Analytics
                <% end %>
              <% end %>
              
              <%= button_to leave_organization_path(@organization), 
                          method: :delete, 
                          class: "btn btn-outline-danger",
                          form: { style: "display: inline-block;" },
                          data: { confirm: "Are you sure you want to leave this organization?" } do %>
                <i class="bi bi-box-arrow-right"></i> Leave Organization
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Members Section -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-people"></i> Organization Members
          </h5>
        </div>
        <div class="card-body">
          <% if @members.any? %>
            <div class="row">
              <% @members.each do |member| %>
                <% membership = member.organization_memberships.find_by(organization: @organization) %>
                <div class="col-md-6 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-center">
                        <div>
                          <h6 class="card-title mb-1">
                            <%= member.full_name %>
                            <% if member.minor? %>
                              <span class="badge bg-warning text-dark ms-1">
                                <%= member.age %> years
                              </span>
                            <% end %>
                          </h6>
                          <small class="text-muted">
                            <i class="bi bi-calendar"></i> 
                            Joined <%= time_ago_in_words(membership.joined_at) %> ago
                          </small>
                        </div>
                        <div class="text-end">
                          <% case membership.role %>
                          <% when 'admin' %>
                            <span class="badge bg-danger">
                              <i class="bi bi-shield-check"></i> Admin
                            </span>
                          <% when 'moderator' %>
                            <span class="badge bg-warning">
                              <i class="bi bi-person-check"></i> Moderator
                            </span>
                          <% when 'member' %>
                            <span class="badge bg-success">
                              <i class="bi bi-person"></i> Member
                            </span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

                         <!-- Pagination -->
             <% if @members.respond_to?(:current_page) %>
               <div class="d-flex justify-content-center">
                 <%= paginate @members %>
               </div>
             <% end %>
          <% else %>
            <div class="text-center py-4">
              <i class="bi bi-people text-muted display-4 mb-3"></i>
              <p class="text-muted">No members found.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Activities Sidebar -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="bi bi-activity"></i> Recent Activities
          </h6>
        </div>
        <div class="card-body">
          <% if @recent_activities.any? %>
            <div class="list-group list-group-flush">
              <% @recent_activities.each do |activity| %>
                <div class="list-group-item border-0 px-0">
                  <div class="d-flex w-100 justify-content-between align-items-start">
                    <div>
                      <small class="text-muted">
                        <%= activity.activity_description %>
                      </small>
                    </div>
                  </div>
                  <small class="text-muted">
                    <i class="bi bi-clock"></i> <%= time_ago_in_words(activity.created_at) %> ago
                  </small>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-3">
              <i class="bi bi-activity text-muted display-6 mb-2"></i>
              <p class="text-muted mb-0">No recent activities.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Organization Stats -->
      <div class="card mt-3">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="bi bi-bar-chart"></i> Quick Stats
          </h6>
        </div>
        <div class="card-body">
          <div class="stat-item mb-2">
            <div class="d-flex justify-content-between">
              <span class="text-muted">Total Members:</span>
              <strong><%= @organization.members_count %></strong>
            </div>
          </div>
          <div class="stat-item mb-2">
            <div class="d-flex justify-content-between">
              <span class="text-muted">Admins:</span>
              <strong><%= @organization.admin_users.count %></strong>
            </div>
          </div>
          <div class="stat-item mb-2">
            <div class="d-flex justify-content-between">
              <span class="text-muted">Moderators:</span>
              <strong><%= @organization.moderator_users.count %></strong>
            </div>
          </div>
          <div class="stat-item">
            <div class="d-flex justify-content-between">
              <span class="text-muted">Adult Members:</span>
              <strong><%= @organization.adult_members.count %></strong>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 
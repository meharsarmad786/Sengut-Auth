<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">
            <i class="bi bi-plus-circle"></i> Create New Organization
          </h4>
        </div>
        <div class="card-body">
          <%= form_with(model: @organization, local: true, class: "needs-validation", novalidate: true) do |form| %>
            <% if @organization.errors.any? %>
              <div class="alert alert-danger">
                <h6><i class="bi bi-exclamation-triangle"></i> Please fix the following errors:</h6>
                <ul class="mb-0">
                  <% @organization.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, class: "form-label" do %>
                <i class="bi bi-building"></i> Organization Name *
              <% end %>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter organization name", required: true %>
              <div class="invalid-feedback">
                Please provide a valid organization name.
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" do %>
                <i class="bi bi-file-text"></i> Description *
              <% end %>
              <%= form.text_area :description, rows: 4, class: "form-control", 
                                 placeholder: "Describe your organization's purpose and activities", required: true %>
              <div class="form-text">
                Provide a clear description of what your organization does and its goals.
              </div>
              <div class="invalid-feedback">
                Please provide a description for your organization.
              </div>
            </div>

            <div class="mb-3">
              <div class="form-check">
                <%= form.check_box :active, class: "form-check-input", checked: true %>
                <%= form.label :active, class: "form-check-label" do %>
                  <i class="bi bi-check-circle"></i> Active Organization
                <% end %>
                <div class="form-text">
                  Active organizations are visible to all users and allow new members to join.
                </div>
              </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to organizations_path, class: "btn btn-outline-secondary me-md-2" do %>
                <i class="bi bi-arrow-left"></i> Cancel
              <% end %>
              <%= form.submit "Create Organization", class: "btn btn-primary" do %>
                <i class="bi bi-plus-circle"></i> Create Organization
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Information Card -->
      <div class="card mt-4">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="bi bi-info-circle"></i> Organization Information
          </h6>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6 class="text-primary">As an Organization Creator:</h6>
              <ul class="list-unstyled">
                <li><i class="bi bi-check text-success"></i> Automatic admin privileges</li>
                <li><i class="bi bi-check text-success"></i> Full member management</li>
                <li><i class="bi bi-check text-success"></i> Access to analytics</li>
                <li><i class="bi bi-check text-success"></i> Organization settings control</li>
              </ul>
            </div>
            <div class="col-md-6">
              <h6 class="text-primary">Organization Features:</h6>
              <ul class="list-unstyled">
                <li><i class="bi bi-check text-success"></i> Member role management</li>
                <li><i class="bi bi-check text-success"></i> Activity tracking</li>
                <li><i class="bi bi-check text-success"></i> Age-appropriate participation</li>
                <li><i class="bi bi-check text-success"></i> Parental consent integration</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script> 
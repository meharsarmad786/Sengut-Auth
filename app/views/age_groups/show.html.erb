<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <!-- Age Group Header -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h1 class="display-6 mb-2">
                <i class="bi bi-people-fill"></i> <%= @age_group.name %>
                <% if user_signed_in? && @current_user_in_group %>
                  <span class="badge bg-primary ms-2">Your Group</span>
                <% end %>
              </h1>
              <p class="lead text-muted mb-3"><%= @age_group.description %></p>
              <div class="mb-3">
                <span class="badge bg-secondary me-2">
                  <i class="bi bi-calendar-range"></i> Ages <%= @age_group.min_age %>-<%= @age_group.max_age %> years
                </span>
                <% if user_signed_in? %>
                  <span class="badge bg-info">
                    <i class="bi bi-people"></i> <%= @users_in_age_group %> Members
                  </span>
                <% end %>
              </div>
            </div>
            
            <div class="text-end">
              <%= link_to age_groups_path, class: "btn btn-outline-secondary" do %>
                <i class="bi bi-arrow-left"></i> Back to Age Groups
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Participation Rules -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-shield-check"></i> Participation Rules & Content Access
          </h5>
        </div>
        <div class="card-body">
          <div class="participation-rules">
            <h6 class="text-primary mb-3">Content Access Levels</h6>
            <div class="row">
              <div class="col-md-4 mb-3">
                <div class="access-level-card <%= 'active' if @age_group.min_age <= 12 %>">
                  <div class="card h-100">
                    <div class="card-body text-center">
                      <i class="bi bi-emoji-smile display-6 text-success mb-2"></i>
                      <h6>Kids Content</h6>
                      <span class="badge <%= @age_group.min_age <= 12 ? 'bg-success' : 'bg-light text-dark' %>">
                        <%= @age_group.min_age <= 12 ? 'Accessible' : 'Not Accessible' %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <div class="access-level-card <%= 'active' if @age_group.min_age >= 13 %>">
                  <div class="card h-100">
                    <div class="card-body text-center">
                      <i class="bi bi-emoji-neutral display-6 text-warning mb-2"></i>
                      <h6>Teen Content</h6>
                      <span class="badge <%= @age_group.min_age >= 13 ? 'bg-success' : 'bg-light text-dark' %>">
                        <%= @age_group.min_age >= 13 ? 'Accessible' : 'Restricted' %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <div class="access-level-card <%= 'active' if @age_group.min_age >= 18 %>">
                  <div class="card h-100">
                    <div class="card-body text-center">
                      <i class="bi bi-person-check display-6 text-danger mb-2"></i>
                      <h6>Adult Content</h6>
                      <span class="badge <%= @age_group.min_age >= 18 ? 'bg-success' : 'bg-light text-dark' %>">
                        <%= @age_group.min_age >= 18 ? 'Accessible' : 'Restricted' %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <hr>

            <h6 class="text-primary mb-3">Special Requirements</h6>
            <div class="requirements-list">
              <% if @age_group.max_age < 18 %>
                <div class="alert alert-warning">
                  <i class="bi bi-shield-exclamation"></i>
                  <strong>Parental Consent Required:</strong> Users in this age group need parental consent to participate in organizations.
                </div>
              <% end %>

              <% if @age_group.min_age >= 18 %>
                <div class="alert alert-success">
                  <i class="bi bi-check-circle"></i>
                  <strong>Full Access:</strong> Users in this age group have unrestricted access to all content and can join organizations without parental consent.
                </div>
              <% end %>

              <% if @age_group.min_age >= 13 && @age_group.max_age < 18 %>
                <div class="alert alert-info">
                  <i class="bi bi-info-circle"></i>
                  <strong>Supervised Access:</strong> Users in this age group can access most content but may need parental consent for certain activities.
                </div>
              <% end %>

              <% if @age_group.max_age <= 12 %>
                <div class="alert alert-primary">
                  <i class="bi bi-heart"></i>
                  <strong>Protected Environment:</strong> This age group has access to carefully curated, age-appropriate content only.
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Age Group Statistics -->
    <div class="col-md-4">
      <% if user_signed_in? %>
        <div class="card">
          <div class="card-header">
            <h6 class="mb-0">
              <i class="bi bi-bar-chart"></i> Group Statistics
            </h6>
          </div>
          <div class="card-body">
            <div class="stat-item mb-3">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Total Members:</span>
                <strong><%= @users_in_age_group %></strong>
              </div>
            </div>
            <div class="stat-item mb-3">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Age Range:</span>
                <strong><%= @age_group.min_age %>-<%= @age_group.max_age %> years</strong>
              </div>
            </div>
            <% if @current_user_in_group %>
              <div class="stat-item mb-3">
                <div class="d-flex justify-content-between">
                  <span class="text-muted">Your Age:</span>
                  <strong><%= current_user.age %> years</strong>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <% if @current_user_in_group %>
          <div class="card mt-3">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-person-check"></i> Your Status
              </h6>
            </div>
            <div class="card-body">
              <div class="alert alert-success mb-2">
                <i class="bi bi-check-circle"></i> You belong to this age group
              </div>
              <% if current_user.minor? %>
                <% if current_user.can_participate_without_consent? %>
                  <div class="alert alert-info mb-2">
                    <i class="bi bi-shield-check"></i> Parental consent verified
                  </div>
                <% else %>
                  <div class="alert alert-warning mb-2">
                    <i class="bi bi-shield-exclamation"></i> 
                    <%= link_to "Parental consent required", my_parental_consent_path, class: "alert-link" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="card">
          <div class="card-body text-center">
            <i class="bi bi-person-plus display-4 text-muted mb-3"></i>
            <h6>Join to See Statistics</h6>
            <p class="text-muted mb-3">Sign up to see detailed information about this age group.</p>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.access-level-card.active .card {
  border-color: #198754;
  background-color: #f8f9fa;
}

.stat-item {
  padding: 0.5rem 0;
  border-bottom: 1px solid #e9ecef;
}

.stat-item:last-child {
  border-bottom: none;
}
</style> 
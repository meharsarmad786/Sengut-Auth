<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
      <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
          <h3 class="mb-0">
            <i class="bi bi-person-plus"></i> Create Account
          </h3>
          <p class="mb-0 mt-2">Join the Sengut Auth Community</p>
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                       html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :first_name, class: "form-label" do %>
                    <i class="bi bi-person"></i> First Name *
                  <% end %>
                  <%= f.text_field :first_name, class: "form-control", 
                                  placeholder: "Enter your first name", required: true %>
                  <div class="invalid-feedback">
                    Please provide your first name.
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :last_name, class: "form-label" do %>
                    <i class="bi bi-person"></i> Last Name *
                  <% end %>
                  <%= f.text_field :last_name, class: "form-control", 
                                  placeholder: "Enter your last name", required: true %>
                  <div class="invalid-feedback">
                    Please provide your last name.
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" do %>
                <i class="bi bi-envelope"></i> Email Address *
              <% end %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                                class: "form-control", placeholder: "Enter your email", required: true %>
              <div class="form-text">
                We'll never share your email with anyone else.
              </div>
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :date_of_birth, class: "form-label" do %>
                    <i class="bi bi-calendar"></i> Date of Birth *
                  <% end %>
                  <%= f.date_field :date_of_birth, class: "form-control", 
                                  max: Date.current, required: true %>
                  <div class="form-text">
                    Required for age-appropriate participation rules.
                  </div>
                  <div class="invalid-feedback">
                    Please provide your date of birth.
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :phone, class: "form-label" do %>
                    <i class="bi bi-telephone"></i> Phone Number *
                  <% end %>
                  <%= f.telephone_field :phone, class: "form-control", 
                                       placeholder: "+1234567890", required: true %>
                  <div class="form-text">
                    Include country code (e.g., +1 for US).
                  </div>
                  <div class="invalid-feedback">
                    Please provide a valid phone number.
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :password, class: "form-label" do %>
                    <i class="bi bi-lock"></i> Password *
                  <% end %>
                  <%= f.password_field :password, autocomplete: "new-password", 
                                      class: "form-control", placeholder: "Enter password", 
                                      minlength: 6, required: true %>
                  <div class="form-text">
                    Minimum 6 characters.
                  </div>
                  <div class="invalid-feedback">
                    Password must be at least 6 characters long.
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :password_confirmation, class: "form-label" do %>
                    <i class="bi bi-lock-fill"></i> Confirm Password *
                  <% end %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                                      class: "form-control", placeholder: "Confirm password", 
                                      minlength: 6, required: true %>
                  <div class="invalid-feedback">
                    Please confirm your password.
                  </div>
                </div>
              </div>
            </div>

            <!-- Age Verification Alert -->
            <div class="alert alert-info">
              <h6 class="alert-heading">
                <i class="bi bi-info-circle"></i> Age-Based Participation
              </h6>
              <small>
                • <strong>Under 18:</strong> Parental consent required for organization participation<br>
                • <strong>18 and over:</strong> Full access to all features and organizations
              </small>
            </div>

            <div class="d-grid">
              <%= f.submit "Create Account", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>

          <!-- Additional Links -->
          <div class="text-center mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

      <!-- Features Information -->
      <div class="card mt-3">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="bi bi-star"></i> Account Benefits
          </h6>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <ul class="list-unstyled">
                <li><i class="bi bi-check text-success"></i> Join organizations</li>
                <li><i class="bi bi-check text-success"></i> Age-appropriate content</li>
                <li><i class="bi bi-check text-success"></i> Activity tracking</li>
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="list-unstyled">
                <li><i class="bi bi-check text-success"></i> Create organizations</li>
                <li><i class="bi bi-check text-success"></i> Role-based permissions</li>
                <li><i class="bi bi-check text-success"></i> Analytics dashboard</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();

  // Password confirmation validation
  document.addEventListener('DOMContentLoaded', function() {
    const password = document.getElementById('user_password');
    const passwordConfirmation = document.getElementById('user_password_confirmation');

    function validatePassword() {
      if (password.value !== passwordConfirmation.value) {
        passwordConfirmation.setCustomValidity("Passwords don't match");
      } else {
        passwordConfirmation.setCustomValidity('');
      }
    }

    password.addEventListener('change', validatePassword);
    passwordConfirmation.addEventListener('keyup', validatePassword);
  });
</script>

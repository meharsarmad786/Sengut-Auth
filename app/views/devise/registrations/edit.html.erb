<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-info text-white text-center">
          <h3 class="mb-0">
            <i class="bi bi-person-gear"></i> Edit Profile
          </h3>
          <p class="mb-0 mt-2">Update your account information</p>
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                       html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :first_name, class: "form-label" do %>
                    <i class="bi bi-person"></i> First Name *
                  <% end %>
                  <%= f.text_field :first_name, class: "form-control", 
                                  placeholder: "Enter your first name", required: true %>
                  <div class="invalid-feedback">
                    Please provide your first name.
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :last_name, class: "form-label" do %>
                    <i class="bi bi-person"></i> Last Name *
                  <% end %>
                  <%= f.text_field :last_name, class: "form-control", 
                                  placeholder: "Enter your last name", required: true %>
                  <div class="invalid-feedback">
                    Please provide your last name.
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" do %>
                <i class="bi bi-envelope"></i> Email Address *
              <% end %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                                class: "form-control", placeholder: "Enter your email", required: true %>
              <div class="form-text">
                We'll never share your email with anyone else.
              </div>
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :date_of_birth, class: "form-label" do %>
                    <i class="bi bi-calendar"></i> Date of Birth *
                  <% end %>
                  <%= f.date_field :date_of_birth, class: "form-control", 
                                  max: Date.current, required: true, readonly: current_user.minor? %>
                  <% if current_user.minor? %>
                    <div class="form-text text-warning">
                      <i class="bi bi-lock"></i> Date of birth cannot be changed for minor accounts.
                    </div>
                  <% else %>
                    <div class="form-text">
                      Required for age-appropriate participation rules.
                    </div>
                  <% end %>
                  <div class="invalid-feedback">
                    Please provide your date of birth.
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :phone, class: "form-label" do %>
                    <i class="bi bi-telephone"></i> Phone Number *
                  <% end %>
                  <%= f.telephone_field :phone, class: "form-control", 
                                       placeholder: "+1234567890", required: true %>
                  <div class="form-text">
                    Include country code (e.g., +1 for US).
                  </div>
                  <div class="invalid-feedback">
                    Please provide a valid phone number.
                  </div>
                </div>
              </div>
            </div>

            <!-- Current Account Info -->
            <div class="alert alert-info">
              <h6 class="alert-heading">
                <i class="bi bi-info-circle"></i> Current Account Information
              </h6>
              <div class="row">
                <div class="col-md-6">
                  <small>
                    <strong>Account Type:</strong> 
                    <span class="badge bg-<%= current_user.minor? ? 'warning' : 'success' %>">
                      <%= current_user.minor? ? 'Minor' : 'Adult' %>
                    </span>
                  </small><br>
                  <small>
                    <strong>Age:</strong> <%= current_user.age %> years old
                  </small><br>
                  <small>
                    <strong>Age Group:</strong> <%= current_user.age_group&.name || 'N/A' %>
                  </small>
                </div>
                <div class="col-md-6">
                  <small>
                    <strong>Organizations:</strong> <%= current_user.organizations.count %>
                  </small><br>
                  <small>
                    <strong>Activities:</strong> <%= current_user.participation_activities.count %>
                  </small><br>
                  <% if current_user.minor? %>
                    <small>
                      <strong>Parental Consent:</strong> 
                      <span class="badge bg-<%= current_user.can_participate_without_consent? ? 'success' : 'danger' %>">
                        <%= current_user.can_participate_without_consent? ? 'Approved' : 'Required' %>
                      </span>
                    </small>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Password Change Section -->
            <div class="card mt-4">
              <div class="card-header">
                <h6 class="mb-0">
                  <i class="bi bi-shield-lock"></i> Change Password (Optional)
                </h6>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <%= f.label :password, class: "form-label" do %>
                        <i class="bi bi-lock"></i> New Password
                      <% end %>
                      <%= f.password_field :password, autocomplete: "new-password", 
                                          class: "form-control", placeholder: "Leave blank to keep current", 
                                          minlength: 6 %>
                      <div class="form-text">
                        Leave blank if you don't want to change it.
                      </div>
                    </div>
                  </div>
                  
                  <div class="col-md-6">
                    <div class="mb-3">
                      <%= f.label :password_confirmation, class: "form-label" do %>
                        <i class="bi bi-lock-fill"></i> Confirm New Password
                      <% end %>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                                          class: "form-control", placeholder: "Confirm new password", 
                                          minlength: 6 %>
                    </div>
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.label :current_password, class: "form-label" do %>
                    <i class="bi bi-shield-check"></i> Current Password *
                  <% end %>
                  <%= f.password_field :current_password, autocomplete: "current-password", 
                                      class: "form-control", placeholder: "Enter current password", required: true %>
                  <div class="form-text">
                    We need your current password to confirm your changes.
                  </div>
                  <div class="invalid-feedback">
                    Please enter your current password.
                  </div>
                </div>
              </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
              <%= link_to dashboard_path, class: "btn btn-outline-secondary me-md-2" do %>
                <i class="bi bi-arrow-left"></i> Cancel
              <% end %>
              <%= f.submit "Update Profile", class: "btn btn-info" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Account Management -->
      <div class="card mt-4 border-danger">
        <div class="card-header bg-danger text-white">
          <h6 class="mb-0">
            <i class="bi bi-exclamation-triangle"></i> Account Management
          </h6>
        </div>
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h6 class="text-danger">Cancel Account</h6>
              <p class="text-muted mb-0">
                Permanently delete your account and all associated data. This action cannot be undone.
              </p>
            </div>
            <div class="col-md-4 text-end">
              <%= button_to registration_path(resource_name), 
                            method: :delete,
                            data: { confirm: "Are you absolutely sure? This will permanently delete your account and cannot be undone." }, 
                            class: "btn btn-danger" do %>
                <i class="bi bi-trash"></i> Delete Account
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();

  // Password confirmation validation
  document.addEventListener('DOMContentLoaded', function() {
    const password = document.getElementById('user_password');
    const passwordConfirmation = document.getElementById('user_password_confirmation');

    if (password && passwordConfirmation) {
      function validatePassword() {
        if (password.value !== passwordConfirmation.value) {
          passwordConfirmation.setCustomValidity("Passwords don't match");
        } else {
          passwordConfirmation.setCustomValidity('');
        }
      }

      password.addEventListener('change', validatePassword);
      passwordConfirmation.addEventListener('keyup', validatePassword);
    }
  });
</script>
